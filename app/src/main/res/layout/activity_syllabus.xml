<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple">

        <TextView
            android:id="@+id/syllabus_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/back"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="返回"
            android:textColor="@color/orange"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="课程表"
            android:textColor="@color/orange"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/syllabus_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="添加课程"
            android:textColor="@color/orange"
            android:textSize="20dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/weekName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/weekItemMarLeft"
            android:layout_weight="0.5"
            android:background="@color/classIndex"
            android:gravity="center_horizontal|center_vertical"
            android:text="" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@color/classIndex"
            android:gravity="center_horizontal|center_vertical"
            android:text="周一" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@color/classIndex"
            android:gravity="center_horizontal|center_vertical"
            android:text="周二" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@color/classIndex"
            android:gravity="center_horizontal|center_vertical"
            android:text="周三" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@color/classIndex"
            android:gravity="center_horizontal|center_vertical"
            android:text="周四" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@color/classIndex"
            android:gravity="center_horizontal|center_vertical"
            android:text="周五" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@color/classIndex"
            android:gravity="center_horizontal|center_vertical"
            android:text="周六" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@color/classIndex"
            android:gravity="center_horizontal|center_vertical"
            android:text="周日" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/syllabus_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/syllabus_contentPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/syllabus_weekPanel_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/weekItemHeight"
                        android:layout_marginLeft="@dimen/weekItemMarLeft"
                        android:layout_marginTop="@dimen/weekItemMarTop"
                        android:background="@color/classIndex"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="1" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/weekItemHeight"
                        android:layout_marginLeft="@dimen/weekItemMarLeft"
                        android:layout_marginTop="@dimen/weekItemMarTop"
                        android:background="@color/classIndex"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="2" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/weekItemHeight"
                        android:layout_marginLeft="@dimen/weekItemMarLeft"
                        android:layout_marginTop="@dimen/weekItemMarTop"
                        android:background="@color/classIndex"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="3" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/weekItemHeight"
                        android:layout_marginLeft="@dimen/weekItemMarLeft"
                        android:layout_marginTop="@dimen/weekItemMarTop"
                        android:background="@color/classIndex"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="4" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/weekItemHeight"
                        android:layout_marginLeft="@dimen/weekItemMarLeft"
                        android:layout_marginTop="@dimen/weekItemMarTop"
                        android:background="@color/classIndex"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="5" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/weekItemHeight"
                        android:layout_marginLeft="@dimen/weekItemMarLeft"
                        android:layout_marginTop="@dimen/weekItemMarTop"
                        android:background="@color/classIndex"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="6" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/weekItemHeight"
                        android:layout_marginLeft="@dimen/weekItemMarLeft"
                        android:layout_marginTop="@dimen/weekItemMarTop"
                        android:background="@color/classIndex"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="7" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/weekItemHeight"
                        android:layout_marginLeft="@dimen/weekItemMarLeft"
                        android:layout_marginTop="@dimen/weekItemMarTop"
                        android:background="@color/classIndex"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="8" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/weekItemHeight"
                        android:layout_marginLeft="@dimen/weekItemMarLeft"
                        android:layout_marginTop="@dimen/weekItemMarTop"
                        android:background="@color/classIndex"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="9" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/weekItemHeight"
                        android:layout_marginLeft="@dimen/weekItemMarLeft"
                        android:layout_marginTop="@dimen/weekItemMarTop"
                        android:background="@color/classIndex"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="10" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/weekItemHeight"
                        android:layout_marginLeft="@dimen/weekItemMarLeft"
                        android:layout_marginTop="@dimen/weekItemMarTop"
                        android:background="@color/classIndex"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="11" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/weekItemHeight"
                        android:layout_marginLeft="@dimen/weekItemMarLeft"
                        android:layout_marginTop="@dimen/weekItemMarTop"
                        android:background="@color/classIndex"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="12" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/syllabus_weekPanel_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    >

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/syllabus_weekPanel_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    >

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/syllabus_weekPanel_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    >

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/syllabus_weekPanel_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    >

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/syllabus_weekPanel_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    >

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/syllabus_weekPanel_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    >

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/syllabus_weekPanel_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    >

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>