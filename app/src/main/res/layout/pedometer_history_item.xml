<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pedometer_history_item_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pedometer_history_item_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/listview_item_pressed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2.5dp">

        <TextView
            android:id="@+id/pedometer_history_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-02-22"
            android:textColor="@color/blue"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2.5dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="步数 :"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/pedometer_history_item_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="卡路里 :"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/pedometer_history_item_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:textSize="25dp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>